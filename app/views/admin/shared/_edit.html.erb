<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<%if params[:action]=='edit' && User.find(session["user_id"]).profile.id == 1 then %>
	<%= form_tag(form_action, :id => "merge_with")  %>
    	<h4><%= _("Merge Articles") %></h4>
    	<%= _("Article ID:") %><%= text_field 'merge_article','id', {:autocomplete => 'off', :style => 'width: 10%'} %>
    	<input id='merge_article' type="submit" value="<%= _('Merge Article') %>" name="merge[article]" class="btn info"/>
<%end%>
